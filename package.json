{
  "name": "kwot-web",
  "version": "0.0.0",
  "private": true,
  "postcss": {
    "plugins": {
      "tailwindcss": {
        "config": "./config/tailwind.config.js"
      },
      "autoprefixer": {}
    }
  },
  "lint-staged": {
    "*": "prettier --check --ignore-unknown --config config/.prettierrc.json",
    "*.{js,ts,jsx,tsx}": "eslint -c config/eslint.config.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "client/**/*"
    ],
    "watch": [
      "server",
      "lib"
    ],
    "quiet": true,
    "exec": "ts-node --transpile-only -r tsconfig-paths/register server/main.ts",
    "ext": "ts"
  },
  "scripts": {
    "start": "concurrently -n \"client,server\" \"npm run client\" \"npm run server\"",
    "client": "vite --config config/vite.config.ts",
    "client:build": "tsc && vite build --config config/vite.config.ts",
    "client:preview": "vite preview --config config/vite.config.ts",
    "server": "nodemon",
    "postinstall": "husky install config/husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8.4.8",
    "@types/express": "^4.17.14",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.23",
    "@types/react-dom": "^18.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.12",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "tailwindcss": "^3.2.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.0",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.12.0",
    "@fontsource/merriweather": "^4.5.14",
    "@fontsource/merriweather-sans": "^4.5.10",
    "@headlessui/react": "^1.7.3",
    "axios": "^1.1.3",
    "cors": "^2.8.5",
    "express": "^5.0.0-beta.1",
    "ioredis": "^5.2.3",
    "jose": "^4.10.3",
    "moment": "^2.29.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "react-router-dom": "^6.4.2",
    "winston": "^3.8.2",
    "zod": "^3.19.1"
  }
}
